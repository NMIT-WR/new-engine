{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "paths": {
    "@libs/data-layer": ["./libs/data-layer/src"],
    "@libs/data-layer/*": ["./libs/data-layer/src/*"],
    "@libs/ui": ["./libs/ui/src"],
    "@libs/ui/*": ["./libs/ui/src/*"],
    "@libs/analytics": ["./libs/analytics/src"],
    "@libs/analytics/*": ["./libs/analytics/src/*"],
    "@libs/medusa-sdk": ["./libs/medusa-sdk/src"],
    "@libs/medusa-sdk/*": ["./libs/medusa-sdk/src/*"],
    "@libs/product-hooks": ["./libs/product-hooks/src"],
    "@libs/product-hooks/*": ["./libs/product-hooks/src/*"]
  },
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/dist/**",
    "**/.next/**",
    "**/.medusa/**",
    "**/build/**",
    "**/storybook-static/**",
    "**/coverage/**",
    "**/.netlify/**",
    "**/e2e/**",
    "**/playwright-report/**",
    "**/*.generated.{ts,tsx}",
    "**/.cache/**",
    "**/local/**"
  ],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "ignoreIssues": {
    "**/*.stories.tsx": ["exports"],
    "**/*.stories.ts": ["exports"],
    "**/tokens/**/*.ts": ["exports", "types"],
    "**/tokens/**/*.css": ["files"]
  },
  "workspaces": {
    "apps/medusa-be": {
      "entry": [
        "src/api/**/*.{ts,tsx}",
        "src/modules/**/*.{ts,tsx}",
        "src/workflows/**/*.{ts,tsx}",
        "src/jobs/**/*.{ts,tsx}",
        "src/admin/**/*.{ts,tsx}",
        "medusa-config.ts"
      ],
      "ignore": [
        ".medusa/**",
        "dist/**",
        "src/scripts/**"
      ]
    },
    "apps/frontend-demo": {
      "entry": [
        "src/app/**/*.{tsx,ts}",
        "next.config.{js,ts,mjs}"
      ],
      "ignore": [
        ".next/**",
        ".netlify/**"
      ]
    },
    "apps/n1": {
      "entry": [
        "src/app/**/*.{tsx,ts}",
        "next.config.{js,ts,mjs}"
      ],
      "ignore": [
        ".next/**",
        ".netlify/**"
      ]
    },
    "apps/herbatika": {
      "entry": [
        "src/**/*.{ts,tsx}"
      ]
    },
    "libs/ui": {
      "entry": [
        "src/atoms/*.tsx",
        "src/molecules/*.tsx",
        "src/organisms/*.tsx",
        "src/utils.ts"
      ],
      "project": [
        "src/**/*.{ts,tsx}"
      ],
      "includeEntryExports": true,
      "storybook": {
        "config": [".storybook/main.ts"],
        "entry": [
          "**/*.stories.{ts,tsx}",
          ".storybook/**/*.{ts,tsx}"
        ]
      },
      "ignore": [
        "storybook-static/**",
        "local/**"
      ]
    },
    "libs/analytics": {
      "entry": [
        "src/index.ts"
      ],
      "includeEntryExports": true
    },
    "libs/data-layer": {
      "entry": [
        "src/index.ts"
      ],
      "includeEntryExports": true
    },
    "libs/medusa-sdk": {
      "entry": [
        "src/index.ts"
      ],
      "includeEntryExports": true
    },
    "libs/product-hooks": {
      "entry": [
        "src/index.ts"
      ],
      "includeEntryExports": true
    }
  },
  "rules": {
    "files": "warn",
    "dependencies": "warn",
    "devDependencies": "warn",
    "unlisted": "error",
    "exports": "warn",
    "types": "warn",
    "duplicates": "warn"
  }
}

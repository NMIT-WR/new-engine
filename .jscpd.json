{
  "threshold": 2,
  "reporters": ["html", "json", "console"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/.medusa/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.test.{ts,tsx,js,jsx}",
    "**/*.spec.{ts,tsx,js,jsx}",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/storybook-static/**",
    "**/.netlify/**",
    "**/e2e/**",
    "**/playwright-report/**",
    "pnpm-lock.yaml",
    "package-lock.json",
    "yarn.lock",
    "**/*.generated.{ts,tsx,js,jsx}",
    "**/.cache/**"
  ],
  "path": [
    "apps/",
    "libs/"
  ],
  "format": ["typescript", "javascript", "css"],
  "absolute": true,
  "gitignore": true,
  "output": "./reports/code-duplication",
  "minLines": 10,
  "minTokens": 100,
  "maxLines": 500,
  "maxSize": "500kb",
  "skipComments": true,
  "blame": false,
  "exitCode": 0,
  "silent": false,
  "verbose": false,
  "mode": "mild",
  "formatsExts": {
    "typescript": [
      "ts",
      "tsx"
    ],
    "javascript": [
      "js",
      "jsx",
      "mjs"
    ],
    "css": [
      "css",
      "scss"
    ]
  }
}

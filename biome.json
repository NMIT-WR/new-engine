{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignore": [
      "**/node_modules/**/*",
      "**/playwright-report/**/*",
      "**/.medusa/**/*",
      "**/migrations/**/*",
      "**/.next/**/*",
      "check-env-variables.js"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": ["*.spec.ts"],
      "javascript": {
        "globals": ["jest", "describe", "it", "expect"]
      }
    }
  ]
}

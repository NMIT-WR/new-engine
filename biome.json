{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/react", "ultracite/next"],
  "files": {
    "includes": [
      "**",
      "!**/node_modules/**/*",
      "!**/playwright-report/**/*",
      "!**/.medusa/**/*",
      "!**/migrations/**/*",
      "!**/.next/**/*",
      "!**/check-env-variables.js",
      "!**/*.stories.tsx",
      "!**/.storybook/main.ts",
      "!**/libs/ui/src/tokens/index.css"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "master"
  },
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "info",
        "useTopLevelRegex": "info"
      },
      "suspicious": {
        "noEmptyBlockStatements": "info",
        "noArrayIndexKey": "warn",
        "noExplicitAny": "warn",
        "noEvolvingTypes": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.spec.ts"],
      "javascript": {
        "globals": ["jest", "describe", "it", "expect"]
      }
    },
    {
      "includes": ["libs/analytics/src/**/*"],
      "assist": {
        "enabled": false
      },
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": "warn",
            "useSimplifiedLogicExpression": "warn"
          },
          "performance": {
            "noBarrelFile": "off"
          },
          "style": {
            "useConsistentTypeDefinitions": "warn",
            "useUnifiedTypeSignatures": "warn"
          }
        }
      }
    },
    {
      "includes": ["libs/analytics/src/**/*.tsx"],
      "linter": {
        "rules": {
          "performance": {
            "noImgElement": "off"
          },
          "security": {
            "noDangerouslySetInnerHtml": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/medusa-be/**/*"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "warn"
          },
          "performance": {
            "noBarrelFile": "info",
            "noNamespaceImport": "info"
          }
        }
      }
    }
  ]
}
